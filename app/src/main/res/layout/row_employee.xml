<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cvRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0.5dp"
    android:backgroundTint="#f2f3f5"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="12dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="#E2E8F0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/first_names" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/baseline_alternate_email_24"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            tools:text="jacob@gmail.com" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPhone"
            tools:text="9082927849"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/baseline_call_24"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDesignationDepartment"
            tools:text="SDE - 1  (Mobile App Development)kasmhfbakhbfabaksjfdbsfafsfafsfa"
            android:fontFamily="@font/poppins"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@id/ivEdit"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/baseline_card_travel_24"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvActive"
            android:text="INACTIVE"
            android:fontFamily="@font/poppins_medium"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:paddingTop="6dp"
            android:textSize="12sp"
            android:paddingBottom="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_status_in_active"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="36dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_height="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_edit"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>